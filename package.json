{
  "name": "sonar-js",
  "version": "1.1.0",
  "description": "A tiny library for detecting when a browser is scrolled to the bottom of a web page.",
  "main": "dist/sonar.js",
  "umd:main": "dist/sonar.umd.js",
  "module": "dist/sonar.mjs",
  "scripts": {
    "build": "microbundle --entry lib/sonar.js --name Sonar",
    "prepublish": "npm run build",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "author": {
    "name": "Brandon Weiss",
    "email": "desk@brandonweiss.me",
    "url": "http://brandonweiss.me"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/brandonweiss/sonar-js.git"
  },
  "devDependencies": {
    "ava": "^1.1.0",
    "esm": "^3.1.0",
    "husky": "^1.3.1",
    "jsdom": "^13.1.0",
    "microbundle": "^0.9.0",
    "np": "^3.1.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.10.0"
  },
  "dependencies": {},
  "ava": {
    "require": [
      "esm"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "semi": false,
    "trailingComma": "all"
  }
}
